{
    "version": 2,
    "buildCommand": "cd client && npm install && CI=false npm run build",
    "outputDirectory": "client/build",
    "rewrites": [
        {
            "source": "/search",
            "destination": "/api/index.js"
        },
        {
            "source": "/track/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/proxy-audio",
            "destination": "/api/index.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cross-Origin-Opener-Policy",
                    "value": "same-origin"
                },
                {
                    "key": "Cross-Origin-Embedder-Policy",
                    "value": "require-corp"
                }
            ]
        }
    ]
}